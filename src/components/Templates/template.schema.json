{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Template",
  "description": "An EmE Template",
  "type": "object",
  "properties": {
    "_id": {
      "description": "guid id of template",
      "type": "string"
    },
    "name": {
      "description": "Name",
      "type": "string",
      "minLength": 1
    },
    "subject": {
      "description": "Subject",
      "type": "string",
      "minLength": 1
    },
    "htmlBody": {
      "description": "Html body",
      "type": "string",
      "minLength": 1
    },
    "plainBody": {
      "description": "Plain text body",
      "type": "string",
      "minLength": 1
    },
    "from": {
      "description": "Name and Address used in `from` field",
      "type": "object",
      "properties": {
        "name": {
          "description": "From friendly name",
          "type": "string"
        }
      },
      "required": ["name"]
    }
  },
  "required": [
    "name",
    "htmlBody",
    "plainBody"
  ]
}
